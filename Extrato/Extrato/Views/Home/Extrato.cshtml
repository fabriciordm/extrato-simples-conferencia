<form id="generatepdf-form" method="post" action="/Home/ExportarPDF">
    <input type="hidden" name="filtroDias" id="filtroDiasHidden" value="@ViewData["filtroDias"]" />
    <button type="button" id="generatepdf-btn">Exportar PDF</button>
</form>

<div id="dataContainer" data-filtrodias="@ViewData["filtroDias"]"></div>

<script>
    document.getElementById('generatepdf-btn').addEventListener('click', function () {
        // Obtém o valor do atributo data-filtrodias da div
        var filtroDias = document.getElementById("dataContainer").getAttribute("data-filtrodias");

        // Define o valor do campo oculto no formulário
        document.getElementById('filtroDiasHidden').value = filtroDias;

        // Submete o formulário via POST
        document.getElementById('generatepdf-form').submit();
    });
</script>

